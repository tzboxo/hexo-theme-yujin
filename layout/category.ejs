<%
var themeConfig = get_theme_config();
%>
<div class="category-container">
  <h1 class="category-title">分类: <%- page.category %></h1>
  
  <% if (page.posts && page.posts.length) { %>
    <div class="posts-grid">
      <% page.posts.sort('-date').each(function(post) { %>
        <div class="post-item">
          <a href="<%- url_for(post.path) %>">
            <% if (post.cover) { %>
              <div class="post-cover" style="background-image: url('<%- url_for(post.cover) %>');"></div>
            <% } else { %>
              <% if (themeConfig.default_cover) { %>
                <div class="post-cover" style="background-image: url('<%- url_for(themeConfig.default_cover) %>');"></div>
              <% } else { %>
                <div class="post-cover" style="background-image: url('/images/default-cover.jpg');"></div>
              <% } %>
            <% } %>
            <div class="post-info">
              <h2 class="post-title"><%- post.title || '无标题' %></h2>
              <div class="title-divider"></div>
              <div class="post-date"><%- post.date.format(config.date_format) %></div>
            </div>
          </a>
        </div>
      <% }); %>
    </div>
    
    <% if (page.total > 1) { %>
      <nav class="pagination">
        <%- paginator({
          current: page.current,
          total: page.total,
          base: url_for(page.base),
          format: 'page/%d/',
          perPage: page.per_page
        }) %>
      </nav>
    <% } %>
  <% } else { %>
    <p class="no-posts">该分类下暂无文章</p>
  <% } %>
</div>

<style>
.category-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
}

.category-title {
  font-size: 2.5em;
  margin-bottom: 40px;
  text-align: center;
  color: #333;
}

.posts-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 30px;
  margin-bottom: 30px;
}

.post-item {
  flex: 0 1 calc(33.333% - 20px);
  min-width: 250px;
  border-radius: 5px;
  overflow: hidden;
  transition: transform 0.3s ease;
}

.post-item:hover {
  transform: translateY(-5px);
}

.post-item a {
  text-decoration: none;
  color: inherit;
}

.post-cover {
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  background-size: cover;
  background-position: center;
  background-color: #eee;
}

.post-info {
  padding: 20px 0;
  text-align: center;
}

.post-title {
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-bottom: 15px;
  max-height: 54px;
  line-height: 27px;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.title-divider {
  width: 60px;
  height: 1px;
  background-color: #ddd;
  margin: 0 auto 15px;
}

.post-date {
  font-size: 14px;
  color: #999;
  margin-top: 0;
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20px 0;
}

.pagination a {
  display: inline-block;
  padding: 8px 15px;
  text-decoration: none;
  color: #333;
  border: 1px solid #ddd;
  border-radius: 3px;
}

.pagination a:hover {
  background-color: #f5f5f5;
}

.pagination .current {
  background-color: #333;
  color: #fff;
  border-color: #333;
}

@media (max-width: 1200px) {
  .posts-grid {
    gap: 20px;
  }
  
  .post-item {
    flex: 0 1 calc(50% - 10px);
  }
}

@media (max-width: 768px) {
  .posts-grid {
    gap: 15px;
  }
  
  .post-item {
    flex: 0 1 100%;
  }
  
  .post-title {
    font-size: 16px;
  }
}

.no-posts {
  text-align: center;
  color: #999;
  font-size: 16px;
  padding: 40px 0;
}
</style>